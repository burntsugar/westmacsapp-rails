<h1>Edit Observation</h1>
<h2>TrailSite <%=@loggable.name%> observation <%=@observation.id%></h2>

<%= form_with(model: [@loggable,@observation]) do |form|%>
  
  <div class="form-group">
    <%=form.label :id%>
    <%= form.text_area :id, class:"form-control"%>
    <%=form.label :note%>
    <%= form.text_area :note, class:"form-control"%>
    <%=form.label :author_name%>
    <%= form.text_area :author_name, class:"form-control", placeholder:"Add your name"%>
  </div>
  <%= form.submit "Update", class: "btn btn-primary"%>
  <%=link_to "Cancel", :back, class: "btn btn-primary"%>

<%end%>
